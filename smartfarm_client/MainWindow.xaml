<Window x:Class="smartfarm_client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        Title="SmartFarm Client" Width="1200" Height="800"
        Background="#1e1e1e">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <!-- 현재 온도 패널 -->
            <RowDefinition Height="350"/>
            <!-- 실시간 그래프 -->
            <RowDefinition Height="Auto"/>
            <!-- 버튼 -->
        </Grid.RowDefinitions>

        <!-- 현재 온도 패널 -->
        <Border x:Name="AlarmPanel"
                Grid.Row="0"
                Background="#262626"
                CornerRadius="10"
                Padding="20">

            <StackPanel>
                <TextBlock Text="현재 온도"
                           FontSize="26"
                           Foreground="White"/>

                <!-- ★ 필수! 이게 없어서 txtCurrentTemp 오류가 났던 것!! -->
                <TextBlock x:Name="txtCurrentTemp"
                           FontSize="48"
                           Foreground="SkyBlue"
                           FontWeight="Bold"
                           Text="0 ℃"/>
            </StackPanel>

        </Border>

        <!-- 실시간 그래프 -->
        <Border Grid.Row="1"
                Background="#2b2b2b"
                CornerRadius="10"
                Padding="20">
            <lvc:CartesianChart x:Name="TemperatureChart"/>
        </Border>

        <!-- 분석 창 버튼 -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    Margin="0,20,0,0">
            <Button Content="데이터 분석 창 열기"
                    Width="200"
                    Height="45"
                    Background="#444"
                    Foreground="White"
                    Click="OpenAnalysisWindow_Click"/>
        </StackPanel>

    </Grid>
</Window>
